resource "kubernetes_deployment" "sabnzbd" {
  metadata {
    name = "sabnzbd"
  }

  spec {
    replicas = 1

    selector {
      match_labels = {
        app = "sabnzbd"
      }
    }

    template {
      metadata {
        labels = {
          app = "sabnzbd"
        }
      }

      spec {
        container {
          image = "sabnzbd/sabnzbd:latest"
          name  = "sabnzbd"

          port {
            container_port = 8080
          }

          volume_mount {
            mount_path = "/data"
            name       = "media-storage"
          }

          volume_mount {
            mount_path = "/config"
            name       = "sabnzbd-config-storage"
          }
        }

        volume {
          name = "media-storage"

          persistent_volume_claim {
            claim_name = kubernetes_persistent_volume_claim.media_pvc.metadata[0].name
          }
        }

        volume {
          name = "sabnzbd-config-storage"

          persistent_volume_claim {
            claim_name = kubernetes_persistent_volume_claim.sabnzbd_config_pvc.metadata[0].name
          }
        }
      }
    }
  }
}

resource "kubernetes_persistent_volume_claim" "sabnzbd_config_pvc" {
  metadata {
    name = "sabnzbd-config-pvc"
  }

  spec {
    access_modes = ["ReadWriteMany"]
    resources {
      requests = {
        storage = "10Gi"  # Adjust size as needed
      }
    }
    storage_class_name = "immediate-local-path"
  }
}
