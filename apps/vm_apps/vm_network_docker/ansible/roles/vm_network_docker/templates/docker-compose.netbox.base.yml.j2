# Netbox Docker Compose Configuration
# Minimal, explicit configuration for Netbox deployment
# Versions pinned for reproducibility and auditability

version: '3.8'

services:
  netbox:
    image: docker.io/netboxcommunity/netbox:v4.4-3.4.1
    container_name: netbox-netbox-1
    depends_on:
      - postgres
      - redis
      - redis-cache
    env_file: .env
    user: "unit:root"
    healthcheck:
      test: curl -f http://localhost:8080/login/ || exit 1
      start_period: 90s
      timeout: 3s
      interval: 15s
    volumes:
      - ./configuration:/etc/netbox/config:z,ro
      - netbox-media-files:/opt/netbox/netbox/media:rw
      - netbox-reports-files:/opt/netbox/netbox/reports:rw
      - netbox-scripts-files:/opt/netbox/netbox/scripts:rw
    restart: unless-stopped

  netbox-worker:
    image: docker.io/netboxcommunity/netbox:v4.4-3.4.1
    container_name: netbox-netbox-worker-1
    depends_on:
      netbox:
        condition: service_healthy
    env_file: .env
    user: "unit:root"
    command:
      - /opt/netbox/venv/bin/python
      - /opt/netbox/netbox/manage.py
      - rqworker
    healthcheck:
      test: ps -aux | grep -v grep | grep -q rqworker || exit 1
      start_period: 20s
      timeout: 3s
      interval: 15s
    volumes:
      - ./configuration:/etc/netbox/config:z,ro
      - netbox-media-files:/opt/netbox/netbox/media:rw
      - netbox-reports-files:/opt/netbox/netbox/reports:rw
      - netbox-scripts-files:/opt/netbox/netbox/scripts:rw
    restart: unless-stopped

  postgres:
    image: docker.io/postgres:17-alpine
    container_name: netbox-postgres-1
    healthcheck:
      test: pg_isready -q -t 2 -d $$POSTGRES_DB -U $$POSTGRES_USER
      start_period: 20s
      timeout: 30s
      interval: 10s
      retries: 5
    env_file: .env
    volumes:
      - netbox-postgres-data:/var/lib/postgresql/data
    restart: unless-stopped

  redis:
    image: docker.io/valkey/valkey:8.1-alpine
    container_name: netbox-redis-1
    command:
      - sh
      - -c
      - valkey-server --appendonly yes --requirepass $$REDIS_PASSWORD
    healthcheck:
      test: '[ $$(valkey-cli --pass "$${REDIS_PASSWORD}" ping) = ''PONG'' ]'
      start_period: 5s
      timeout: 3s
      interval: 1s
      retries: 5
    env_file: .env
    volumes:
      - netbox-redis-data:/data
    restart: unless-stopped

  redis-cache:
    image: docker.io/valkey/valkey:8.1-alpine
    container_name: netbox-redis-cache-1
    command:
      - sh
      - -c
      - valkey-server --requirepass $$REDIS_CACHE_PASSWORD
    healthcheck:
      test: '[ $$(valkey-cli --pass "$${REDIS_CACHE_PASSWORD}" ping) = ''PONG'' ]'
      start_period: 5s
      timeout: 3s
      interval: 1s
      retries: 5
    env_file: .env
    volumes:
      - netbox-redis-cache-data:/data
    restart: unless-stopped

volumes:
  netbox-media-files:
    driver: local
  netbox-postgres-data:
    driver: local
  netbox-redis-cache-data:
    driver: local
  netbox-redis-data:
    driver: local
  netbox-reports-files:
    driver: local
  netbox-scripts-files:
    driver: local

networks:
  default:
    name: netbox_default
