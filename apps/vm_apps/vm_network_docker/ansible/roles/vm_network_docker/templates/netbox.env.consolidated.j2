# Netbox Stack Environment Configuration
# Consolidated environment variables for all services
# Managed by Ansible - do not edit directly

# ==========================================
# PostgreSQL Configuration
# ==========================================
POSTGRES_DB=netbox
POSTGRES_USER=netbox
POSTGRES_PASSWORD={{ vm_network_docker_netbox_db_password }}

# ==========================================
# Netbox Database Configuration
# ==========================================
DB_HOST=postgres
DB_NAME=netbox
DB_PASSWORD={{ vm_network_docker_netbox_db_password }}
DB_USER=netbox

# ==========================================
# Redis Configuration
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_PASSWORD={{ vm_network_docker_redis_password }}
REDIS_SSL=false
REDIS_INSECURE_SKIP_TLS_VERIFY=false

# ==========================================
# Redis Cache Configuration
# ==========================================
REDIS_CACHE_HOST=redis-cache
REDIS_CACHE_PORT=6379
REDIS_CACHE_DATABASE=1
REDIS_CACHE_PASSWORD={{ vm_network_docker_redis_cache_password }}
REDIS_CACHE_SSL=false
REDIS_CACHE_INSECURE_SKIP_TLS_VERIFY=false

# ==========================================
# Netbox Application Configuration
# ==========================================
GRAPHQL_ENABLED=true
HOUSEKEEPING_INTERVAL=86400
METRICS_ENABLED=false
RELEASE_CHECK_URL=https://api.github.com/repos/netbox-community/netbox/releases
WEBHOOKS_ENABLED=true

# ==========================================
# Netbox Media and Files
# ==========================================
MEDIA_ROOT=/opt/netbox/netbox/media

# ==========================================
# Netbox Email Configuration (Optional)
# ==========================================
EMAIL_FROM=netbox@example.com
EMAIL_SERVER=localhost
EMAIL_PORT=25
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_USE_SSL=false
EMAIL_USE_TLS=false
EMAIL_SSL_CERTFILE=
EMAIL_SSL_KEYFILE=
EMAIL_TIMEOUT=5

# ==========================================
# Netbox Security
# ==========================================
SECRET_KEY='{{ vm_network_docker_netbox_secret_key }}'
CORS_ORIGIN_ALLOW_ALL=true

# ==========================================
# Netbox Superuser (Initial Setup)
# ==========================================
SUPERUSER_NAME=admin
SUPERUSER_EMAIL=admin@example.com
SUPERUSER_PASSWORD=admin
SUPERUSER_API_TOKEN=0123456789abcdef0123456789abcdef01234567
